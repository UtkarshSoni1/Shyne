                            <p class="text-blue-400 text-base sm:text-xl underline cursor-pointer" id="edit1" onclick="toggleForm(1)">Edit</p>
                        </span>
                        <form action="/users/update/name/<%= user.id %>" method="post" class="flex flex-col gap-5 sm:gap-10">

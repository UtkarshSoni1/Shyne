<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/styles.css">
    <style>
        body,
        html {
            height: 100vh;
            width: 100vw;
        }
    </style>

</head>

<body>
    <div id="main" class="h-full w-full">
        <div class="w-full h-[100px] flex items-center justify-center">
            <h1 class="text-2xl font-bold text-center">Admin Panel.</h1>
        </div>
        <div id="content-area" class="h-full w-full border-t-2 flex flex-wrap">
            <div id="sideBar" class="w-1/5 h-full p-10">
                <div class="w-full h-1/3 mt-12 flex flex-col gap-1 p-4 space-y-2">
                    <label class="cursor-pointer">
                        <input type="radio" name="filter1" class="peer hidden" checked>
                        <div class="peer-checked:text-black peer-checked:font-bold text-gray-400">
                            <a href="">All Products</a>
                        </div>
                    </label>

                    <label class="cursor-pointer">
                        <input type="radio" name="filter1" class="peer hidden">
                        <div class="peer-checked:text-black peer-checked:font-bold text-gray-400">
                            <a href="/owners/products/create">Create New Product</a>
                        </div>
                    </label>

                </div>

            </div>
            <div id="body" class="w-4/5 h-full p-5 flex flex-wrap gap-8 ">
                <% if(product.length > 0){ %>
                    <% product.forEach(function(val){ %>
                        <div class="h-[40%] w-[20%] flex flex-col rounded-md overflow-hidden relative">
                            <div class="h-2/3 w-full relative" style="background-color: #<%= val.bgcolor %>;">
                                <img src="/uploads/<%= val.image %>" alt="" class="w-full h-full object-contain overflow-hidden z-10">
                            </div>
                            <div class="h-1/3 w-full flex flex-wrap justify-around items-center" style="background-color: #<%= val.panelcolor %>;">
                                <div>
                                    <h1 class="text-2xl" style="color: #<%= val.textcolor %>"><%= val.name %></h1>
                                    <h1 class="text-2xl" style="color: #<%= val.textcolor %>">â‚¹<%= val.price %></h1>
                                </div>
                                <div class="h-10 w-10 bg-white  rounded-full z-50 text-xl text-black  flex justify-center items-center top-2 right-2">
                                    <a href="/owners/products/edit/<%= val.id %>" class="flex justify-center items-center">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                </div>
                                <!-- <button class="h-10 w-10 rounded-full bg-white flex justify-center items-center transition delay-75 duration-300 ease-in" id="addbtn" onclick="toggleIcon()">
                                    <i class="fa-solid fa-plus "></i>                     
                                </button> -->
                            </div>
                        </div>
                        <% }) %>
                    <% }else{ %>
                        <h1>No products yet</h1>
                        <% } %>
            </div>
        </div>
    </div>


</body>

</html>